{
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform", "tf"]
    },
    "satysfi-ls": {
      "command": "satysfi-language-server",
      "args": [],
      "filetypes": ["satysfi"],
      "trace.server": "verbose"
    }
  },
  "suggest.enablePreview": true,
  "coc.preferences.willSaveHandlerTimeout": 1000,
  "coc.preferences.formatOnSaveFiletypes": ["json", "markdown", "python"],
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic-languageserver.filetypes": {
    "python": ["flake8", "mypy"]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black", "isort"]
  },
  "diagnostic-languageserver.linters": {
    "flake8": {
      "sourceName": "flake8",
      "command": "flake8",
      "debounce": 200,
      "rootPatterns": [".git", "pyproject.toml", "setup.py", "setup.cfg"],
      "args": [
        "--ignore=E402,C901,W503,W504,E116,E702,C0103,C0114,C0115,C0116,C0103,C0301,W0613,W0102,R0903,R0902,R0914,R0915,R0205,W0703,W0702,W0603",
        "--format=%(row)d,%(col)d,%(code).1s,%(code)s: %(text)s",
        "-"
      ]
    },
    "mypy": {
      "command": "mypy",
      "args": [
        "--ignore-missing-imports",
        "--disallow-untyped-defs",
        "--warn-redundant-casts",
        "--show-error-context",
        "--no-incremental",
        "--no-implicit-optional",
        "--warn-unreachable",
        "--show-error-codes",
        "--pretty",
        "--disallow-incomplete-defs",
        "--warn-no-return"
      ]
    }
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["--quiet", "--line-length", "119", "-"]
    },
    "isort": {
      "command": "isort",
      "args": ["--quiet", "-"]
    }
  }
}
